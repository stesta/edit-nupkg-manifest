{
  "name": "nuspec-editor-action",
  "version": "0.1.0",
  "private": true,
  "description": "Update a manifest (.nuspec) for an existing nuget package. The use-case is for things like the Octopus CLI that does not generate a valid manifest for pushing a package to GitHub.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stesta/nuspec-editor-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "fs.promises": "^0.1.2",
    "jszip": "^3.7.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@typescript-eslint/parser": "^5.5.0",
    "@vercel/ncc": "^0.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
